[
  // explorer
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "d",
    "command": "moveFileToTrash",
    "when": "explorerResourceMoveableToTrash && filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "explorerResourceMoveableToTrash && filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "explorerResourceMoveableToTrash && filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "o",
    "command": "explorer.openAndPassFocus",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus && !searchFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "v",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  // with prefix (ctrl+;)
  {
    "key": "ctrl+; b",
    "command": "workbench.debug.action.focusBreakpointsView"
  },
  {
    "key": "ctrl+; c",
    "command": "workbench.panel.chat.view.copilot.focus"
  },
  {
    "key": "ctrl+; d",
    "command": "workbench.view.debug",
    "when": "viewContainer.workbench.view.debug.enabled"
  },
  {
    "key": "ctrl+; e",
    "command": "workbench.explorer.fileView.focus"
  },
  {
    "key": "ctrl+; f",
    "command": "workbench.view.search",
    "when": "workbench.view.search.active"
  },
  {
    "key": "ctrl+; g",
    "command": "workbench.scm.focus"
  },
  {
    "key": "ctrl+; h",
    "command": "gitlens.openFileHistory"
  },
  {
    "key": "ctrl+; k",
    "command": "workbench.action.openGlobalKeybindings"
  },
  {
    "key": "ctrl+; shift+k",
    "command": "workbench.action.openGlobalKeybindingsFile"
  },
  {
    "key": "ctrl+; l",
    "command": "git-graph.view"
  },
  {
    "key": "ctrl+; m",
    "command": "workbench.action.problems.focus"
  },
  {
    "key": "ctrl+; p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+; q",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+; r",
    "command": "workbench.action.reloadWindow"
  },
  {
    "key": "ctrl+; s",
    "command": "workbench.action.openSettings"
  },
  {
    "key": "ctrl+; shift+s",
    "command": "workbench.action.openSettingsJson"
  },
  {
    "key": "ctrl+; t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+; shift+t",
    "command": "workbench.action.closePanel"
  },
  {
    "key": "ctrl+; v",
    "command": "markdown.showPreviewToSide",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
  },
  {
    "key": "ctrl+; x",
    "command": "workbench.view.extensions",
    "when": "viewContainer.workbench.view.extensions.enabled"
  },
  // conflicts with other tools
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quickOpenView"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  }
]
